<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginEnd="@dimen/spacing"
            android:layout_marginTop="@dimen/spacing"
            android:textSize="@dimen/text"
            android:textColor="@color/black_alpha_87"
            android:text="multiple image item"
            />
        
        <com.igreenwood.loupesample.RoundedCornerFrameLayout
            android:id="@+id/rounded_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="@dimen/image_corner_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginEnd="@dimen/spacing"
            android:layout_marginTop="@dimen/spacing"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vertical_middle_guide"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    />

                <ImageView
                    android:id="@+id/top_left_image"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/vertical_middle_guide"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/photo_by_ishan_at_seefromthesky_on_unsplash"
                    />

                <ImageView
                    android:id="@+id/top_right_image"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="2dp"
                    app:layout_constraintStart_toEndOf="@id/vertical_middle_guide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/photo_by_ishan_at_seefromthesky_on_unsplash"
                    />

                <ImageView
                    android:id="@+id/bottom_left_image"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/vertical_middle_guide"
                    app:layout_constraintTop_toBottomOf="@id/top_left_image"
                    tools:src="@drawable/photo_by_ishan_at_seefromthesky_on_unsplash"
                    />

                <ImageView
                    android:id="@+id/bottom_right_image"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/vertical_middle_guide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/top_right_image"
                    tools:src="@drawable/photo_by_ishan_at_seefromthesky_on_unsplash"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.igreenwood.loupesample.RoundedCornerFrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_alpha_12"
            android:layout_marginTop="@dimen/spacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rounded_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>